// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Verilator",
            "type": "shell",
            "command": "verilator",
            "args": [
                "-sv", "--language", "1800-2012",
                "--lint-only",
                "${workspaceFolder}/core/decoder/*.sv"
            ],
            "problemMatcher": [
                "$verilator-error", "$verilator-warning"
            ]
        }
    ]
}